---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html>
  <Head title="Tire Calligraphy - Conversations" url="https://tirecalli.com/conversations" description="Conversations with TC Family." />
  <body>
    <Header />
    <main>
      <section class="cards">
        <a href="anja.html">
          <article>
            <div class="card__image card__image--squared">
              <img src="/img/conversation/anja_tirecalligraphy_black_tshirt_boulder.webp" alt="tirecalli-picture" />
            </div>
            <h5>Anja x TC – Bouldering</h5>
            <div class="card__description">
              <p>w Anja Santini-Mikulić</p>
            </div>
          </article>
        </a>
        <a href="tena.html">
          <article>
            <div class="card__image card__image--squared">
              <img src="/img/conversation/tena-tire-calligraphy-parkour-movement.webp" alt="tirecalli-picture" />
            </div>
            <h5>Tena x TC – Parkour</h5>
            <div class="card__description">
              <p>w Tena Vidović</p>
            </div>
          </article>
        </a>
      </section>
    </main>
    <Footer />
    <script is:inline src="https://unpkg.com/gsap/dist/gsap.min.js"></script>
    <script is:inline src="https://unpkg.com/gsap/dist/ScrollTrigger.min.js"></script>
    <script is:inline src="/js/app.js"></script>
    <script is:inline>
      gsap.registerPlugin(ScrollTrigger);
      gsap.utils.toArray("article img").forEach((panel, i) => {
        gsap.from(panel, {
          scrollTrigger: {
            trigger: panel,
            start: "top 75%",
          },
          y: 50,
          opacity: 0,
          duration: 1,
        });
      });
    </script>
  </body>
</html>
