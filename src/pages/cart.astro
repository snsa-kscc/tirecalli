---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ShoppingCart } from "../components/ShoppingCart";
---

<html>
  <Head />
  <body>
    <Header />
    <main>
      <ShoppingCart client:only="react" />
    </main>
    <Footer />
    <script is:inline src="/js/app.js"></script>
    <script
      is:inline
      src="https://www.paypal.com/sdk/js?client-id=Af1ohtvwXNwwIsDqriG76tdtT7Xju8PagK5m1mNmUxumkiE5wDiyL_uqWR7qZcX6ndvcu7UynDpq1hWW&currency=EUR&intent=authorize"
    ></script>
    <script is:inline>
      // const storeItems = document.querySelectorAll(".store-items");
      // const payload = [];
      // storeItems.forEach((item) => {
      //   const singleObj = {};
      //   singleObj["id"] = parseInt(item.dataset.sku);
      //   singleObj["quantity"] = parseInt(item.dataset.qnt);
      //   payload.push(singleObj);
      // });
      setTimeout(() => {
        paypal
          .Buttons({
            createOrder: function () {
              const localStorageItems = localStorage.getItem("shopping-cart");
              return fetch("/.netlify/functions/paypal", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                // body: JSON.stringify(payload),
                body: localStorageItems,
              })
                .then((res) => {
                  if (res.ok) return res.json();
                  return res.json().then((json) => Promise.reject(json));
                })
                .then(({ id }) => {
                  return id;
                })
                .catch((e) => {
                  console.error(e.error);
                });
            },
            onApprove: function (data, actions) {
              return actions.order.authorize().then(function () {
                localStorage.removeItem("shopping-cart");
                actions.redirect("https://tirecalli.com/success"); // return actions.order.capture();
              });
            },
          })
          .render("#paypal-button-container");
      }, 200);
    </script>
  </body>
</html>
