---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html>
  <Head />
  <body>
    <Header />
    <main class="m-0">
      <section class="hero-collection">
        <img src="/img/logo/hp-logo-white.webp" alt="tirecalli-picture" />
      </section>
      <section class="cards">
        <a href="/Basic-Denim-Jacket/">
          <article>
            <div class="card__image relative">
              <img src="/img/Basic-Denim-Jacket/man-in-basic-denim-jacket.webp" alt="tirecalli-picture" />
              <div class="product__exclusive bold"><p>WEB EXCLUSIVE</p></div>
            </div>
            <h5>Basic Denim Jacket</h5>
            <div class="card__description">
              <p>180€</p>
            </div>
          </article>
        </a>
        <a href="/Black-Quilted-Jacket/">
          <article>
            <div class="card__image relative">
              <img src="/img/Black-Quilted-Jacket/man-in-black-quilted-jacket-front.webp" alt="tirecalli-picture" />
              <div class="product__exclusive bold"><p>WEB EXCLUSIVE</p></div>
            </div>
            <h5>Black Quilted Jacket</h5>
            <div class="card__description">
              <p>80€</p>
            </div>
          </article>
        </a>
        <a href="/Hybrid-Jacket/">
          <article>
            <div class="card__image relative">
              <img src="/img/Hybrid-Jacket/girl-in-hybrid-jacket-3.webp" alt="tirecalli-picture" />
              <div class="product__exclusive bold"><p>WEB EXCLUSIVE</p></div>
            </div>
            <h5>Hybrid Jacket</h5>
            <div class="card__description">
              <p>SOLD OUT</p>
            </div>
          </article>
        </a>
        <a href="/Basic-Denim-Overall-Pant/">
          <article>
            <div class="card__image relative">
              <img src="/img/Basic-Denim-Overall-Pant/girl-in-basic-denim-overall-pant-2.webp" alt="tirecalli-picture" />
              <div class="product__exclusive bold"><p>WEB EXCLUSIVE</p></div>
            </div>
            <h5>Basic Denim Overall Pant</h5>
            <div class="card__description">
              <p>SOLD OUT</p>
            </div>
          </article>
        </a>
      </section>
      <section class="hero first-hero">
        <img src="/img/Basic-Denim-Overall-Pant/girl-in-basic-denim-overall-pant-back.webp" alt="tirecalli-picture" />
        <img src="/img/Basic-Denim-Jacket/man-in-basic-denim-jacket-and-denim-pants-back.webp" alt="tirecalli-picture" />
        <div class="centered">
          <h6>TC22 199144 Crypto Kids</h6>
          <div class="flex">
            <a href="shop">
              <h3>shop now</h3>
            </a>
          </div>
        </div>
      </section>
      <section class="hero">
        <img src="/img/Sand-Brown-Licitar-T-Shirt/girl-in-sand-brown-licitar-t-shirt-back.webp" alt="tirecalli-picture" />
        <div class="centered">
          <h6>TC23/4 Heart Cœurt</h6>
          <div class="flex">
            <a href="heart-coeurt-campaign">
              <h3 class="mt centered">explore</h3>
            </a>
          </div>
        </div>
      </section>
      <section class="hero second-hero">
        <div class="centered">
          <h6>TC21 New Life</h6>
          <div class="flex">
            <a href="199144-campaign">
              <h3>learn more</h3>
            </a>
          </div>
        </div>
        <img src="/img/tc21-new-life-1.webp" alt="tirecalli-picture" />
        <img src="/img/tc21-new-life-2.webp" alt="tirecalli-picture" />
      </section>
    </main>
    <Footer />
    <script src="../js/app.js"></script>
    <script src="../js/app-index.js"></script>
  </body>
</html>
