---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html>
  <Head />
  <body>
    <Header />
    <main>
      <section class="new-collection">
        <img src="/img/tc-21-22-new-collection.webp" alt="tirecalli-picture" />
        <div>
          <h4>TC22 CRYPTO KIDS</h4>
          <div class="flex">
            <a href="campaign.html">
              <h2 class="centered">explore collection</h2>
            </a>
          </div>
        </div>
      </section>
      <section class="video">
        <video class="vid" src="https://res.cloudinary.com/tire-calligraphy/video/upload/tire-calli-22-crypto-kids.mp4" muted playsinline></video>
        <div class="controls">
          <div class="sound sound-mute">
            <div class="sound--icon"></div>
            <div class="sound--wave sound--wave_one"></div>
            <div class="sound--wave sound--wave_two"></div>
          </div>
        </div>
      </section>
      <section class="hero first-hero">
        <img src="/img/Basic-Denim-Overall-Pant/girl-in-basic-denim-overall-pant-back.webp" alt="tirecalli-picture" />
        <img src="/img/Basic-Denim-Jacket/man-in-basic-denim-jacket-and-denim-pants-back.webp" alt="tirecalli-picture" />
        <div class="centered">
          <h6>TC22 199144 Crypto Kids</h6>
          <div class="flex">
            <a href="199144.html">
              <h3>shop now</h3>
            </a>
          </div>
        </div>
      </section>
      <section class="video video--flex">
        <video class="vid" src="https://res.cloudinary.com/tire-calligraphy/video/upload/TC21-3D-Visual-Enhancer.mp4" controls playsinline></video>
        <div class="text--white">
          <h6 class="centered">Watch TC21 Experience</h6>
        </div>
      </section>
      <section class="hero second-hero">
        <img src="/img/tc21-new-life-1.webp" alt="tirecalli-picture" />
        <img src="/img/tc21-new-life-2.webp" alt="tirecalli-picture" />
        <div class="centered">
          <h6>TC21 New Life</h6>
          <div class="flex">
            <a href="new-life.html">
              <h3>shop now</h3>
            </a>
            <a href="campaign.html#199144">
              <h3>learn more</h3>
            </a>
          </div>
        </div>
      </section>
    </main>
    <Footer />
    <script is:inline src="https://unpkg.com/gsap/dist/gsap.min.js"></script>
    <script is:inline src="https://unpkg.com/gsap/dist/ScrollTrigger.min.js"></script>
    <script is:inline src="/js/app.js"></script>
  </body>
</html>
